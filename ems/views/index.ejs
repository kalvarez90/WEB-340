<!DOCTYPE html>
<html lang="en">
<% include header %>

<body>
<% include navbar %>

<!--PAGE CONTENT-->
<div class="bg-light container" style="width: 100%;" id="main">

  <!--HEADER-->
      <h2>Fruits</h2>
      <br />
      <a class="" href="/new">New Fruit</a>
      <br />
      <table class="table table-hover">
        <thead class="bg-secondary">
        <tr>
          <th class="text-white">Name</th>
          <th class="text-white">Functions</th>
        </tr>
        </thead>
        <tbody>
        <% fruits.forEach(function (entry) { %>
          <tr>
            <td><%= entry.name %></td>
            <td style="width: 10%; text-align: center;">
              <a style="color: #555" href="/view/<%= entry.name %>">
                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        </tbody>
        <% }) %>
      </table>
    <% } else { %> No entries! <a href="/new">Add one!</a>
    <% } %>

  </div>

  <% include scripts %>

</body>
</html>
